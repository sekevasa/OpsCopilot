{
  "openapi": "3.1.0",
  "info": {
    "title": "Manufacturing AI Copilot API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/v1/sync/run": {
      "post": {
        "tags": [
          "data-ingest"
        ],
        "summary": "Start Sync",
        "description": "Start a new sync run from a data source.\n\nCreates a new ingestion job and begins fetching data.\nReturns immediately with job ID for polling.",
        "operationId": "start_sync_api_v1_sync_run_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SyncRunRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "202": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SyncStartResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/sync/status/{job_id}": {
      "get": {
        "tags": [
          "data-ingest"
        ],
        "summary": "Get Sync Status",
        "description": "Get status of a sync job.\n\nPoll this endpoint to check progress of an ingestion job.",
        "operationId": "get_sync_status_api_v1_sync_status__job_id__get",
        "parameters": [
          {
            "name": "job_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid",
              "title": "Job Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SyncStatusResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/sync/job/{job_id}": {
      "get": {
        "tags": [
          "data-ingest"
        ],
        "summary": "Get Ingestion Job",
        "description": "Get detailed information about an ingestion job.",
        "operationId": "get_ingestion_job_api_v1_sync_job__job_id__get",
        "parameters": [
          {
            "name": "job_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid",
              "title": "Job Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/IngestionJobResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/health": {
      "get": {
        "tags": [
          "data-ingest"
        ],
        "summary": "Health Check",
        "description": "Health check endpoint.",
        "operationId": "health_check_api_v1_health_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/health/ready": {
      "get": {
        "tags": [
          "data-ingest"
        ],
        "summary": "Readiness Check",
        "description": "Readiness probe for Kubernetes.",
        "operationId": "readiness_check_api_v1_health_ready_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/api/v1/health/live": {
      "get": {
        "tags": [
          "data-ingest"
        ],
        "summary": "Liveness Check",
        "description": "Liveness probe for Kubernetes.",
        "operationId": "liveness_check_api_v1_health_live_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DataSourceType": {
        "type": "string",
        "enum": [
          "erp",
          "accounting",
          "inventory_system",
          "quality_control",
          "production",
          "external_api"
        ],
        "title": "DataSourceType",
        "description": "Types of data sources."
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "HealthResponse": {
        "properties": {
          "status": {
            "type": "string",
            "title": "Status",
            "description": "Service status (healthy, degraded, unhealthy)"
          },
          "service": {
            "type": "string",
            "title": "Service",
            "description": "Service name"
          },
          "version": {
            "type": "string",
            "title": "Version",
            "description": "Service version"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "title": "Timestamp"
          },
          "database": {
            "type": "string",
            "title": "Database",
            "description": "Database connection status",
            "default": "unknown"
          }
        },
        "type": "object",
        "required": [
          "status",
          "service",
          "version",
          "timestamp"
        ],
        "title": "HealthResponse",
        "description": "Health check response."
      },
      "IngestionJobResponse": {
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "title": "Id"
          },
          "job_reference": {
            "type": "string",
            "title": "Job Reference"
          },
          "source_type": {
            "$ref": "#/components/schemas/DataSourceType"
          },
          "source_id": {
            "type": "string",
            "title": "Source Id"
          },
          "status": {
            "$ref": "#/components/schemas/IngestionStatus"
          },
          "total_records": {
            "type": "integer",
            "title": "Total Records"
          },
          "successful_records": {
            "type": "integer",
            "title": "Successful Records"
          },
          "failed_records": {
            "type": "integer",
            "title": "Failed Records"
          },
          "started_at": {
            "anyOf": [
              {
                "type": "string",
                "format": "date-time"
              },
              {
                "type": "null"
              }
            ],
            "title": "Started At"
          },
          "completed_at": {
            "anyOf": [
              {
                "type": "string",
                "format": "date-time"
              },
              {
                "type": "null"
              }
            ],
            "title": "Completed At"
          },
          "error_summary": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Error Summary"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "title": "Created At"
          }
        },
        "type": "object",
        "required": [
          "id",
          "job_reference",
          "source_type",
          "source_id",
          "status",
          "total_records",
          "successful_records",
          "failed_records",
          "created_at"
        ],
        "title": "IngestionJobResponse",
        "description": "Response for ingestion job."
      },
      "IngestionStatus": {
        "type": "string",
        "enum": [
          "pending",
          "processing",
          "completed",
          "failed",
          "partially_failed"
        ],
        "title": "IngestionStatus",
        "description": "Status of data ingestion."
      },
      "SyncRunRequest": {
        "properties": {
          "source_type": {
            "$ref": "#/components/schemas/DataSourceType",
            "description": "Type of data source"
          },
          "source_id": {
            "type": "string",
            "title": "Source Id",
            "description": "External system identifier"
          },
          "connector_name": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Connector Name",
            "description": "Named connector config"
          },
          "metadata": {
            "anyOf": [
              {
                "additionalProperties": true,
                "type": "object"
              },
              {
                "type": "null"
              }
            ],
            "title": "Metadata",
            "description": "Optional metadata"
          }
        },
        "type": "object",
        "required": [
          "source_type",
          "source_id"
        ],
        "title": "SyncRunRequest",
        "description": "Request to start a sync run."
      },
      "SyncStartResponse": {
        "properties": {
          "job_id": {
            "type": "string",
            "format": "uuid",
            "title": "Job Id"
          },
          "job_reference": {
            "type": "string",
            "title": "Job Reference"
          },
          "status": {
            "$ref": "#/components/schemas/IngestionStatus"
          },
          "message": {
            "type": "string",
            "title": "Message"
          }
        },
        "type": "object",
        "required": [
          "job_id",
          "job_reference",
          "status",
          "message"
        ],
        "title": "SyncStartResponse",
        "description": "Response when sync is started."
      },
      "SyncStatusResponse": {
        "properties": {
          "job_id": {
            "type": "string",
            "format": "uuid",
            "title": "Job Id"
          },
          "status": {
            "$ref": "#/components/schemas/IngestionStatus"
          },
          "progress": {
            "type": "number",
            "maximum": 100.0,
            "minimum": 0.0,
            "title": "Progress",
            "description": "Progress percentage"
          },
          "total_records": {
            "type": "integer",
            "title": "Total Records"
          },
          "successful_records": {
            "type": "integer",
            "title": "Successful Records"
          },
          "failed_records": {
            "type": "integer",
            "title": "Failed Records"
          },
          "started_at": {
            "anyOf": [
              {
                "type": "string",
                "format": "date-time"
              },
              {
                "type": "null"
              }
            ],
            "title": "Started At"
          },
          "completed_at": {
            "anyOf": [
              {
                "type": "string",
                "format": "date-time"
              },
              {
                "type": "null"
              }
            ],
            "title": "Completed At"
          }
        },
        "type": "object",
        "required": [
          "job_id",
          "status",
          "progress",
          "total_records",
          "successful_records",
          "failed_records"
        ],
        "title": "SyncStatusResponse",
        "description": "Response for sync status check."
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          },
          "input": {
            "title": "Input"
          },
          "ctx": {
            "type": "object",
            "title": "Context"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    }
  }
}